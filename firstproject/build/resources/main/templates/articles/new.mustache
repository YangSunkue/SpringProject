{{>layouts/header}}

<form class="container" action="/articles/create" method="post">

    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title"> <!-- DTO의 title과 연결 -->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content"></textarea> <!-- DTO의 content와 연결 -->
    </div>
    <button type="submit">Submit</button>
</form>

